<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/card_view"
    android:layout_margin="5dp"
    card_view:cardCornerRadius="25dp"
    card_view:contentPadding="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">

        <ImageView
            android:id="@+id/item_imageProfile"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/relajado"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp" />

        <TextView
            android:id="@+id/item_nickname_comment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="60dp"
            android:fontFamily="@font/black"
            android:text="@string/nick_name"
            android:textColor="@color/zafiro"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/item_comment"
            android:layout_width="316dp"
            android:layout_height="35dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="60dp"
            android:layout_marginTop="25dp"
            android:fontFamily="@font/regular"
            android:text="lorem lorem "
            android:textSize="12sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/button_report_comment"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="62dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="0dp"
            android:background="@android:color/transparent"
            android:drawableLeft="@drawable/reporte_btn"
            android:fontFamily="@font/thin"
            android:onClick="onclick"
            android:text="Reportar"
            android:textAllCaps="false"
            android:textColor="@color/black"
            android:textSize="13sp" />


    </RelativeLayout>

</androidx.cardview.widget.CardView>